[core]
	editor = zile
	excludesfile = ~/.gitignore_global
[user]
	name = Wilfred Hughes
	email = me@wilfred.me.uk
[alias]
        b = branch
        graph = log --graph --decorate --pretty=oneline --abbrev-commit
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        push-current-branch = "!f() { git push origin `git symbolic-ref HEAD`; }; f"
        # see http://stackoverflow.com/a/17029936/509706
        prune-local = !git-prune-local
        rename-branch = branch -m
        delete-branch = "!f() { echo "Deleting remote branch:"; git push origin --delete $1; echo "Deleting local branch:"; git branch -d $1; }; f"
        delete-local-branch = branch -d
        co = !git-fuzzy

[color]
        branch = auto
        diff = auto
        status = auto
[color "branch"]
       current = yellow reverse
       local = yellow 
       remote = green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       changed = green
       untracked = cyan

[help]
	autocorrect = 20
[push]
	default = simple
[diff]
	algorithm = patience
[transfer]
        fsckobjects = true
[fetch]
        fsckobjects = true
[receive]
        fsckObjects = true
