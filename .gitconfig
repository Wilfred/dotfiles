[core]
	editor = nano
[user]
	name = Wilfred Hughes
	email = me@wilfred.me.uk
[alias]
        new-branch = checkout -b
        change-branch = checkout
        discard-changes = reset --hard
        push-current-branch = "!f() { git push origin `git symbolic-ref HEAD`; }; f"
        rename-branch = branch -m

[color]
        branch = auto
        diff = auto
        status = auto
[color "branch"]
       current = yellow reverse
       local = yellow 
       remote = green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       changed = green
       untracked = cyan

[help]
	autocorrect = 20
